import React from "react";
import PhotoGallery from "react-photo-gallery";
import Box from "@mui/material/Box";
import Tab from "@mui/material/Tab";
import Tabs from "@mui/material/Tabs";
import { ThemeProvider } from '@mui/material/styles';
import { createTheme } from '@mui/material/styles';
import { photos } from "../data/photos";

const BasicRows = () => <PhotoGallery photos={photos} />;

const theme = createTheme({
  palette: {
    type: "ligth",  
    primary: {
      main: "#F57365",
    },
    secondary: {
      main: "#F57365",
    },
  },
  typography: {   
    fontFamily:'Roboto',
    fontSize: 14,    
  },
});

const Gallery = () => {
  const [value, setValue] = React.useState(0);


  const handleChange = (event, newValue) => {
    setValue(newValue);
  };

  return (
    <div className="gallery">
      <ThemeProvider theme={theme}>
        <h1 className="gallery-title">Art Works</h1>
      <Box sx={{ width: '100%', bgcolor: 'transparent' }} >
      <Tabs value={value} 
      onChange={handleChange} 
      textColor="primary"
      inkBarStyle={{color: 'blue'}}
      color="primary"
		  indicatorColor="transparent"
      centered>
        <Tab label={<span className= "main-tab">Item One</span>} />
        <Tab color="primary" label={<span className= "main-tab">Item Two</span>} />
        <Tab color="primary" label={<span className= "main-tab">Item Three</span>} />
      </Tabs>
      <BasicRows />
    </Box>
      </ThemeProvider>
    </div>
  );
};

export default Gallery;

